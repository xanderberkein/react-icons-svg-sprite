{
  "include": ["./src/**/*.ts", "./src/**/*.tsx"],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2019"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ES2019",
    "strict": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "module": "CommonJS",

    "rootDir": "src", 
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true
  }
}